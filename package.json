{
  "name": "claude-code-todo-app-on-vercel",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:api": "tsx watch src/server/dev-server.ts",
    "dev:frontend": "vite",
    "dev:all": "node scripts/dev-all.js",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "db:generate": "prisma generate --schema=./prisma/schema.local.prisma",
    "db:migrate": "prisma migrate dev --schema=./prisma/schema.local.prisma",
    "db:push": "prisma db push --schema=./prisma/schema.local.prisma",
    "db:studio": "prisma studio --schema=./prisma/schema.local.prisma",
    "db:generate:prod": "prisma generate",
    "db:migrate:prod": "prisma migrate deploy",
    "vercel-build": "prisma generate && prisma migrate deploy && npm run build",
    "postinstall": "prisma generate",
    "predeploy": "npm run test && npm run lint && npm run typecheck",
    "deploy": "npm run predeploy && vercel --prod",
    "deploy:preview": "vercel"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "typescript": "^5.8.3",
    "vite": "^7.0.0",
    "zod": "^3.25.74"
  },
  "devDependencies": {
    "@hono/node-server": "^1.14.4",
    "@playwright/test": "^1.53.1",
    "@prisma/client": "^6.10.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vercel/node": "^5.3.3",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.18.0",
    "@eslint/js": "^9.18.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.1.0",
    "hono": "^4.8.3",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "prisma": "^6.10.1",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.20.3",
    "typescript-eslint": "^8.20.0",
    "vercel": "^44.2.12",
    "vitest": "^3.2.4"
  }
}
